<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:gravity="center_vertical"
    android:padding="16dp"
    tools:context="com.vlad.barclaysmobile.dashboard.DashboardTransactionFragment">

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/pie_chart_more_button"
        android:layout_alignParentBottom="true"
        android:text="show me more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pie_chart_more_button">
    <WebView

        android:id="@+id/pie_chart_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/progress_bar"/>
    </RelativeLayout>

</RelativeLayout>
